require('rubygems')
require('post')
require('optparse')

DATA = PackageDataBase.new()

options = ARGV.options()
options.set_summary_indent('    ')
options.banner =    "Usage: postdb [OPTIONS] [PACKAGES]"
options.version =   "Post Database 1.7 (1.7.0)"
options.define_head "Copyright (C) Thomas Chace 2011-2012 <tchacex@gmail.com>"

options.on('-d', '--getdeps=', String,
    'Get dependencies.')  { |arg| puts DATA.get_sync_data(arg)['dependencies'] }
options.on('-v', '--getversion=', String,
    'Get latest version.')  { |arg| puts DATA.get_sync_data(arg)['version'] }
options.on('-c', '--getconflicts=', String,
    'Get conflicts.')  { |arg| puts DATA.get_sync_data(arg)['conflicts'] }
options.on('-i', '--getdescription=', String,
    'Get conflicts.')  { |arg| puts DATA.get_sync_data(arg)['description'] }
options.on('-f', '--getfiles=', String,
    'Get installed files.')  { |arg| puts DATA.get_files(arg) }


options.on('-h', '--help', 'Show this help message.') { puts(options) }
options.parse!
